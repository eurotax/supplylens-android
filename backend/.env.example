# Backend Environment Variables
# Copy this file to .env and fill in real values

# App Configuration
APP_NAME=SupplyLens Backend
APP_VERSION=1.0.0
APP_ENV=dev

# Database (PostgreSQL from Render)
# Get this from Render PostgreSQL Dashboard -> Internal Database URL
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# JWT Configuration (GENERATE SECURE RANDOM VALUES)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_TO_RANDOM_256_BIT_STRING
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12

# CORS (Comma-separated list)
# For development: ["*"]
# For production: ["https://app.supplylens.io"]
ALLOWED_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_15MIN=5

# Logging
LOG_LEVEL=INFO
